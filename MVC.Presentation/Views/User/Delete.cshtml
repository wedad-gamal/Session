@model UserViewModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete @Model.UserName</h1>

<form asp-action="Delete">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input readonly asp-for="Id" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input readonly asp-for="UserName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input readonly asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input readonly asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input readonly asp-for="Email" class="form-control" />
    </div>


    <div class="mt-3">
        <button class="btn btn-danger" type="submit">Delete</button>
        <a class="btn btn-secondary" asp-action="Index">Back</a>
    </div>
</form>

