@model UserViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>User @Model.UserName</h1>

<div>
    <div class="form-group">
        <label asp-for="Id"></label>
        <input readonly asp-for="Id" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input readonly asp-for="UserName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input readonly asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input readonly asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input readonly asp-for="Email" class="form-control" />
    </div>

    <div class="mt-3">
        <a class="btn btn-secondary" asp-action="Index">Back</a>
        <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    </div>
</div>



