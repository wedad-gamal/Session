@model UserViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Edit @Model.UserName</h1>


<form asp-action="Edit">

    <div asp-validation-summary="All"></div>


    <div class="form-group">
        <label asp-for="UserName" class="form-control"></label>
        <input asp-for="UserName" class="form-control" value="@Model.UserName" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div class="form-group">
        <label asp-for="FirstName" class="form-control"></label>
        <input asp-for="FirstName" class="form-control" value="@Model.FirstName" />
        <span asp-validation-for="FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="form-control"></label>
        <input asp-for="LastName" class="form-control" value="@Model.LastName" />
        <span asp-validation-for="LastName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="form-control"></label>
        <input asp-for="Email" class="form-control" value="@Model.Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
     
        @for (int i = 0; i < Model.UserRoleViewModel.Count; i++)
        {
            <input type="hidden" name="UserRoleViewModel[@i].Name" value="@Model.UserRoleViewModel[i].Name" />
            <input type="checkbox" name="UserRoleViewModel[@i].IsAssigned" value="true"
            @(Model.UserRoleViewModel[i].IsAssigned ? "checked" : "") />
            <label>@Model.UserRoleViewModel[i].Name</label>
            <br />
        }
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Edit</button>
        <a class="btn btn-danger" asp-action="Index">Cancel</a>
    </div>
</form>

