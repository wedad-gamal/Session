@model IEnumerable<Department>

<h1>Departments</h1>

<div>
    <a class=" btn btn-primary mt-3" asp-action="Create">Create New Department</a>
</div>
@if (Model.Any())
{

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>
                    @Html.DisplayNameFor(d => d.Id)
                </td>
                <td>
                    @Html.DisplayNameFor(d => d.Name)
                </td>
               <td>
                    @Html.DisplayNameFor(d => d.DateOfCreation)
                </td>
               
                <td>
                    Details
                </td>
                <td>
                    Update
                </td>
                <td>
                    Delete
                </td>
               

            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>                   
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.DateOfCreation
                    </td>

                   <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning"> <i class="fas fa-eye"></i>Details</a>
                   </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"> <i class="fas fa-edit"></i>Edit</a>
                        
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"> <i class="fas fa-trash"></i>Delete</a>
                        
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 alert-warning">
        <h2>No Departments</h2>
    </div>
}
