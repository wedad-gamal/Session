@model Department
<h1>Create New Department</h1>


<form asp-action="Edit">
    <div asp-validation-summary="All"></div>


    <div class="form-group">
        <label asp-for="Name" class="form-control"></label>
        <input asp-for="Name" class="form-control" value="@Model.Name"/>
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfCreation" class="form-control"></label>
        @* <input asp-for="DateOfCreation" class="form-control" value="@Model.DateOfCreation" />
        @Html.EditorFor(model => model.DateOfCreation, new { htmlAttributes = new { @class = "form-control" } }) *@
        <input asp-for="DateOfCreation" type="date" class="form-control" value="@Model.DateOfCreation?.ToString("yyyy-MM-dd")" />

        <span asp-validation-for="DateOfCreation"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Edit</button>
        <a class="btn btn-danger" asp-action="Index">Cancel</a>
    </div>
</form>