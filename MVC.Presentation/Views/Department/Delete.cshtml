@model Department
<h1>Delete @Model.Name</h1>

<form asp-action="Delete">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input readonly asp-for="Id" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input readonly asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DateOfCreation"></label>
        <input readonly asp-for="DateOfCreation" class="form-control" />
    </div>
    <div class="mt-3">
        <button class="btn btn-danger" type="submit">Delete</button>
        <a class="btn btn-secondary" asp-action="Index">Back</a>
    </div>
</form>