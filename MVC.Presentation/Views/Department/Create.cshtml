@model Department
<h1>Create New Department</h1>


<form asp-action="Create">
    <div asp-validation-summary="All"></div>

   
    <div class="form-group">
        <label asp-for="Name" class="form-control"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfCreation" class="form-control"></label>
        <input asp-for="DateOfCreation" class="form-control" />
        <span asp-validation-for="DateOfCreation"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Save</button>
        <a class="btn btn-danger" asp-action="Index">Cancel</a>
    </div>
</form>